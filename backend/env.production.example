# Production Environment Variables Example
# Copy this file and rename to .env for production deployment

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=healthcare_chatbot_prod
DB_USER=your-production-username
DB_PASSWORD=your-production-password

# API Keys
OPENAI_API_KEY=your-openai-api-key
LLAMA_API_KEY=your-llama-api-key

# CORS Configuration
CORS_ORIGINS=https://your-frontend-url.vercel.app,https://your-custom-domain.com
ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,https://your-custom-domain.com

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
